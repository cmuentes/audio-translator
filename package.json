{
  "name": "translator",
  "version": "1.0.0",
  "description": "Audio translator app",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron --js-flags=\"--max-old-space-size=8192\" .",
    "rebuild": "npx @electron/rebuild",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Carlos J. Muentes",
  "license": "ISC",
  "devDependencies": {
    "@electron/rebuild": "^3.4.0",
    "electron": "28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^9.2.0",
    "axios": "^1.7.2",
    "electron-is-dev": "^2.0.0",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "google-tts-api": "^2.0.2",
    "multer": "^2.0.2",
    "node-addon-api": "^8.5.0",
    "uuid": "^9.0.1",
    "vosk": "^0.3.39",
    "wavefile": "^11.0.0"
  },
  "build": {
    "appId": "com.carlosjmuentes.translator",
    "productName": "Gary Translator",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "playback.html",
      "renderer.js",
      "playback.js",
      "styles.css",
      "src/**/*",
      "vosk-server.js",
      "bin/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/gary-logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/gary-logo.png"
    }
  }
}
